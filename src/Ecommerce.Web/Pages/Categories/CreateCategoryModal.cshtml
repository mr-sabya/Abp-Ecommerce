@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Ecommerce.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Ecommerce.Web.Pages.Categories.CreateCategoryModalModel
@inject IHtmlLocalizer<EcommerceResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Category"
                  asp-page="/Categories/CreateCategoryModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>