@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Ecommerce.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Ecommerce.Web.Pages.Categories.EditCategoryModalModel
@inject IHtmlLocalizer<EcommerceResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Category"
                  asp-page="/Categories/EditCategoryModal">
    <abp-modal>
        <abp-modal-header title="@Model.Category.Name"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>